generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// =================== Model User ===================
model User {
  id              String          @id @default(auto()) @map("_id") @db.ObjectId
  username        String          @unique
  email           String          @unique
  password        String
  name            String?
  profile_picture String?
  aboutme         String?
  quote           String[]
  tech_stack      String[]
  skills          String[]
  languages       String[]
  social_links    SocialLinks?    @relation(fields: [socialLinksId], references: [id])
  socialLinksId   String?         @db.ObjectId
  certifications  Certification[]
  experience      Experience[]
  education       Education[]
  resume_url      String?
  contact_email   String?
  phone           String?
  location        String?
  lastLogin       DateTime?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
}

// =================== Model Blog ===================
model Blog {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  slug        String    @unique
  description String?
  cover_image String?
  content     String
  images      String[]
  tags        String[]
  author      String    @default("admin")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt
}

// =================== Model Project ===================
model Project {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  slug        String    @unique
  description String
  tech_stack  String[]
  github_url  String?
  cover_image String?
  gallery     String[]
  tags        String[]
  notebook    Notebook?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt
}

// =================== Model Notebook ===================
model Notebook {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  github_raw_url   String
  rendered_images  String[]
  viewer_embed_url String?
  projectId        String   @unique @db.ObjectId
  project          Project  @relation(fields: [projectId], references: [id])
}

// =================== Model SocialLinks ===================
model SocialLinks {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  github    String?
  linkedin  String?
  twitter   String?
  instagram String?
  website   String?
  youtube   String?
  facebook  String?
  user      User[]
}

// =================== Model Certification ===================
model Certification {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  title          String
  issuer         String
  date           String
  credential_url String?
  userId         String  @db.ObjectId
  user           User    @relation(fields: [userId], references: [id])
}

// =================== Model Experience ===================
model Experience {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  company     String
  location    String?
  startDate   String
  endDate     String?
  isCurrent   Boolean?
  description String?
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])
}

// =================== Model Education ===================
model Education {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  school       String
  degree       String
  fieldOfStudy String?
  startDate    String
  endDate      String?
  description  String?
  userId       String  @db.ObjectId
  user         User    @relation(fields: [userId], references: [id])
}
